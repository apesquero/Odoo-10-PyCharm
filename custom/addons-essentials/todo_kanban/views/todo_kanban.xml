<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Kanban view mode to the menu Action: -->
    <act_window id="todo_task.action_todo_task"
                name="To-Do Tasks"
                res_model="todo.task"
                view_mode="kanban,tree,form,calendar,graph,pivot"
                context="{'search_default_filter_my_tasks': True}"/>

    <!-- Add Kanban view -->
    <record id="todo_task_kanban" model="ir.ui.view">
        <field name="name">todo.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id"
                    class="o_kanban_small_column">
                <field name="stage_id"/>
                <field name="color"/>
                <field name="kanban_state"/>
                <field name="priority"/>
                <field name="is_done"/>
                <field name="message_partner_ids"/>

                <tempaltes>
                    <t t-name="kanban-box">

                    </t>
                </tempaltes>


            </kanban>
        </field>
    </record>
</odoo>

