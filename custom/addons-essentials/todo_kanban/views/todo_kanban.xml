<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Kanban view mode to the menu Action: -->
    <act_window id="todo_task.action_todo_task"
                name="To-Do Tasks"
                res_model="todo.task"
                view_mode="kanban,tree,form,calendar,graph,pivot"
                context="{'search_default_filter_my_tasks': True}"/>

    <!-- Add Kanban view -->
    <record id="todo_task_kanban" model="ir.ui.view">
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id"
                    class="o_kanban_small_column">
                <field name="stage_id"/>
                <field name="color" invisible="True"/>
                <field name="kanban_state"/>
                <field name="priority"/>
                <field name="is_done"/>
                <field name="message_partner_ids"/>

                <templates>
                    <t t-name="follower_avatars">
                        <div>
                            <t t-foreach="record.message_partner_ids.raw_value.slice(0,arg_max)" t-as="rec">
                                <img t-att-src="kanban_image('res.partner', 'image_small', rec)"
                                     class="oe_avatar"
                                     width="24"
                                     height="24"/>
                            </t>
                        </div>
                    </t>

                    <t t-name="kanban-box">
                        <!-- Set the Kanban Card color: -->
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <!-- Top-right drop down menu here... -->
                                <a class="dropdown-toggle btn"
                                   data-toggle="dropdown"
                                   href="#">
                                    <span class="fa fa-bars fa-lg"/>
                                </a>
                                <ul class="dropdown-menu"
                                    role="menu"
                                    aria-labelledby="dLabel">
                                    <!-- Edit and Delete actions, if available: -->
                                    <t t-if="widget.editable">
                                        <li>
                                            <a type="edit">Edit</a>
                                        </li>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <li>
                                            <a type="delete">Delete</a>
                                        </li>
                                    </t>
                                    <t t-if="!record.is_done.value">
                                        <li>
                                            <a name="do_toggle_done" type="object">Set as Done</a>
                                        </li>
                                    </t>
                                    <li>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </li>
                                </ul>
                            </div>
                            <div class="oe_kanban_content">
                                <div>
                                    <field name="tag_ids"/>
                                </div>
                                <div>
                                    <strong>
                                        <a type="open">
                                            <field name="name"/>
                                        </a>
                                    </strong>
                                </div>
                                <ul>
                                    <li>
                                        <field name="user_id"/>
                                    </li>
                                    <li t-attf-class="oe_kanban_text_{{record.date_deadline.raw_value and
                                                                       !(record.date_deadline.raw_value &lt;
                                                                       (new Date()))
                                                                       ? 'red' : 'black' }}">
                                        <field name="date_deadline"/>
                                        <t t-set="calendar_sign">
                                            <span class="oe_e">&#128197;</span>
                                        </t>
                                        <t t-raw="calendar_sign"/>
                                        <t t-if="record.effort_estimate.raw_value gt 0">
                                            <t t-set="red_or_black"
                                               t-value="record.effort_estimate.value gte 10 ?
                                               'oe_kanban_text_red' : 'oe_kanban_text_black'"/>
                                            <li t-att-class="red_or_black">
                                                <field name="effort_estimate"/>
                                            </li>
                                            <li>
                                                <t t-raw="record.message_partner_ids.raw_value"/>
                                            </li>
                                        </t>
                                    </li>
                                </ul>

                                <div class="oe_kanban_footer">
                                    <div>
                                        <field name="priority" widget="priority"/>
                                    </div>
                                    <div>
                                        <field name="kanban_state"
                                               widget="kanban_state_selection"/>
                                        <img t-att-src="kanban_image('res.users',
                                                                     'image_small',
                                                                     record.user_id.raw_value)"
                                             t-attf-alt="Imagen {{record.user_id.value}} from task {{record.name.value}}"
                                             t-att-title="record.user_id.value"
                                             width="44"
                                             height="44"
                                             class="oe_kanban_avatar pull-right"/>
                                        <img t-att-src="kanban_image('res.partner',
                                                                      'image_small',
                                                                      record.user_id.raw_value)"
                                             class="oe_kanban_image pull-right"/>
                                    </div>
                                    <!--<div>-->
                                    <!--<t t-foreach="record.message_partner_ids.raw_value.slice(0,3)" t-as="rec">-->
                                    <!--<img t-att-src="kanban_image('res.partner', 'image_small', rec)"-->
                                    <!--class="oe_avatar"-->
                                    <!--width="24"-->
                                    <!--height="24"/>-->
                                    <!--</t>-->
                                    <!--</div>-->
                                    <t t-call="follower_avatars">
                                        <t t-set="arg_max" t-value="3"/>
                                    </t>
                                </div>
                            </div>
                            <div class="oe_clear"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>

