<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- inherit from web assets backend -->
    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/sale_price_dimension/static/src/css/mdtable.css"/>
            <script type="text/javascript" src="/sale_price_dimension/static/src/js/MultiDimensionTable.js"></script>
        </xpath>
    </template>


    <!-- WIZARD SALE PRICES -->
    <record model="ir.ui.view" id="wizard_mdtable_sale_import_data_form_view">
        <field name="name">import_price_table.form</field>
        <field name="model">import_price_table.mdtable</field>
        <field name="arch" type="xml">
            <form string="Import Sale Prices Data">
                <group>
                    <field name="prices_table_file" required="True" filename="file_name"/>
                    <field name="file_name" readonly="True"/>
                </group>
                <footer>
                    <button name="import_sale_prices_from_file" type="object"
                            string="Import" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="launch_wizard_mdtable_sale_import_data"
                name="Import Sale Prices Data"
                res_model="import_price_table.mdtable"
                view_mode="form"
                view_id="sale_price_dimension.wizard_mdtable_sale_import_data_form_view"
                target="new"
                key2="client_action_multi"/>

</odoo>
