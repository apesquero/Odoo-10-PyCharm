<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Vista relacionada con la vista producto-->
    <record id="view_product_template_form_price_type" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='list_price']" position="before">
                <label for="sale_price_type"/>
                <div>
                    <field name="sale_price_type"/>
                </div>
            </xpath>

            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="attrs">{'invisible':[('sale_price_type', 'not in', ['standard', 'area'])]}</attribute>
            </xpath>

        </field>
    </record>

    <record id="view_product_template_form" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook/page[1]" position="after">
                <page string="Sale Price Type"
                      attrs="{'invisible':[('sale_price_type', '=', 'standard')]}">
                    <group>
                        <field name="width_uom"
                               attrs="{'required':[('sale_price_type', 'in', ['table_1d','table_2d','area'])]}"/>
                        <field name="height_uom"
                               attrs="{'invisible':[('sale_price_type', '=', 'table_1d')],
                                       'required':[('sale_price_type', 'in', ['table_2d','area'])]}"/>
                    </group>
                    <group attrs="{'invisible':[('sale_price_type', '!=', 'area')]}">
                        <group>
                            <field name="min_width"/>
                            <field name="max_width"/>
                        </group>
                        <group>
                            <field name="min_height"/>
                            <field name="max_height"/>
                        </group>
                        <group>
                            <field name="min_price"/>
                        </group>
                        <group>
                            <button name="create_relation" type="object"
                            string="Create" class="oe_highlight"/>
                        </group>
                        <group>
                            <field name="sale_prices_area"
                                   widget="one2many_list"
                                   context="{'show_attribute': False}"/>
                        </group>
                    </group>

                    <div attrs="{'invisible':[('sale_price_type', 'not in', ['table_1d','table_2d'])]}">
                        <div>
                            <field class="col-md-12"
                                   name="sale_prices_table"
                                   widget="mdtable"
                                   mode="sale_price_type"
                                   nolabel="1"/>
                            <div class="o_td_label">
                                <button name="%(launch_wizard_mdtable_sale_import_data)d"
                                        string="Import Records"
                                        type="action"
                                        class="oe_highlight pull-right"/>
                            </div>
                        </div>
                    </div>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
