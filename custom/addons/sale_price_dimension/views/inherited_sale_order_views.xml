<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <xpath expr="//form/group/group/field[@name='product_id']" position="after">
                <label for="origin_width"
                       string="Width"
                       attrs="{'invisible': [('product_price_type', '=', ('standard'))]}"/>
                <div>
                    <field name="origin_width"
                           attrs="{'invisible': [('product_price_type', '=', ('standard'))]}"
                           class="oe_inline" style="max-width: 48%%; margin-right: 4%;"/>
                    <field name="width_sale_uom"
                           attrs="{'invisible': [('product_price_type', '=', ('standard'))]}"
                           options="{'no_create': true, 'no_open': true}"
                           class="oe_inline" style="max-width: 48%%"/>
                </div>
                <label for="origin_height"
                       string="Height"
                       attrs="{'invisible': [('product_price_type', 'not in',
                       ('table_2d','area'))]}"/>
                <div>
                    <field name="origin_height"
                           attrs="{'invisible': [('product_price_type', 'not in',
                           ('area','table_2d'))]}"
                           class="oe_inline" style="max-width: 48%%; margin-right: 4%;"/>
                    <field name="height_sale_uom"
                           attrs="{'invisible': [('product_price_type', 'not in',
                           ('table_2d','area'))]}"
                           options="{'no_create': true, 'no_open': true}"
                           class="oe_inline" style="max-width: 48%%"/>
                </div>
                <field name="product_price_type" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
