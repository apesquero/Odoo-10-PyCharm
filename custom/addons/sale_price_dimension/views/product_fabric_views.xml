<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <act_window id="sale_price_dimension.composition_fabric"
                name="Type Composition"
                res_model="product.type_composition_fabric"
                view_mode="tree,form"
                target="current"/>

    <menuitem id="menu_type_composition_view"
              name="Comp. Fabric"
              parent="sale.prod_config_main"
              sequence="10"
              action="sale_price_dimension.composition_fabric"/>

    <act_window id="sale_price_dimension.tag_fabric_care"
                name="Tag Fabric Care"
                res_model="product.tag_fabric_care"
                view_mode="tree,form"
                target="current"/>

    <menuitem id="menu_tag_fabric_care_view"
              name="Tag Fabric Care"
              parent="sale.prod_config_main"
              sequence="11"
              action="sale_price_dimension.tag_fabric_care"/>


    <record id="view_tree_composition_fabric"
            model="ir.ui.view">
        <field name="model">product.composition_fabric</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="percent_composition" />
                <field name="type_composition" options="{'no_open': True}"/>
            </tree>
        </field>
    </record>

    <record id="view_tree_type_composition_fabric"
            model="ir.ui.view">
        <field name="model">product.type_composition_fabric</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name_type"/>
            </tree>
        </field>
    </record>
</odoo>
