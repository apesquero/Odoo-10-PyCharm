<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_product_configurator_tree">
        <field name="model">product.configurator.attribute</field>
        <field name="inherit_id" ref="product_variant_configurator.view_product_configurator_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='value_id']" position="after">
                <field name="image" widget='image' display="thumbnail"/>
            </xpath>
        </field>
    </record>
</odoo>

